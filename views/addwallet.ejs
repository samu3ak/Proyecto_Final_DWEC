<%- include("template/head.ejs", {tituloWeb})%>
    <link rel="stylesheet" href="css/style.css">
    </head>

    <body class="login">
        <main class="container-fluid mainlogin">

            <div class="container-fluid">
                <div class="row justify-content-center containerFormat">
                    <form action="/login" class="rounded bg-dark p-4 text-white loginFormat align-self-center"
                        method="POST">
                        <div class="mt-2 text-center">
                            <h1 class="display-6">Nuevo Gasto</h1>
                        </div>
                        <div class="mb-3 pt-4 ps-5 pe-5">
                            <label for="gasto" class="form-label">Nombre del Gasto</label>
                            <input type="text" class="form-control" id="gasto" placeholder="Nombre del Asunto"
                                name="nombre">
                        </div>
                        <div class="mb-3 pt-4 ps-5 pe-5">
                            <label for="euros" class="form-label">Cantidad</label>
                            <input type="number" class="form-control" id="euros"
                                placeholder="Valor en Euros" name="euros">
                        </div>
                        <div class="row justify-content-center">
                            <button type="submit" class="btn btn-success mt-5 buttonFormat me-5">Guardar Valor</button>

                            <a class="btn btn-success mt-5 buttonFormat" href="/wallet">Volver</a>
                            
                        </div>
                    </form>
                </div>
            </div>
        </main>
        <%- include("template/footer.ejs")%>