    <body class="principal proyectos">

        <%- include("template/header.ejs", {tituloWeb:"Inicio"})%>
            <main class="container-fluid mainprojects">
                <div class="row">
                    <div class="col-6 text-center ps-5">
                        <h1>Tareas</h1>
                        <table class="table m-5">
                            <thead class="thead-dark">
