<%- include("template/head.ejs", {tituloWeb})%>
    <link rel="stylesheet" href="/css/register.css">
    </head>

    <body class="login">
        <main class="container-fluid mainlogin">

            <div class="container">
                <div class="row justify-content-center containerFormat">
                    <form id="editar" class="rounded bg-dark p-4 text-white loginFormat align-self-center"
                        data-id="<%=gastoEditar.id%>">
                        <div class="mt-2 text-center">
                            <h1 class="display-6">Editar gasto</h1>
                        </div>
                        <div class="mb-3 pt-4 ps-5 pe-5">
                            <label for="nombreproyecto" class="form-label">Nombre del Gasto</label>
                            <input type="text" class="form-control" id="nombre proyecto" placeholder="Nombre del asunto"
                                name="nombre" value="<%=gastoEditar.nombre%>">
                        </div>
                        <div class="mb-3 pt-4 ps-5 pe-5">
                            <label for="tipo" class="form-label">Cantidad</label>
                            <input type="text" class="form-control" id="tipo" placeholder="Valor en euros"
                                name="cantidad" value="<%=gastoEditar.cantidad%>">
                        </div>
                        <div class="row justify-content-center">
                            <button id="edit" type="submit" class="btn btn-success mt-5 buttonFormat me-md-0 me-lg-5 me-xl-5">Guardar
                                cambios</button>
                            <button id="delete" type="submit" class="btn btn-danger mt-5 buttonFormat me-md-0 me-lg-5 me-xl-5">Eliminar
                                gasto</button>

                            <a class="btn btn-success mt-5 buttonFormat" href="/wallet">Volver</a>
                            <%if (error){%>
                                <p class="text-center mt-4 p-1 bg-danger">Rellena todos los campos correctamente</p>
                                <%}%>
                                    <%if (success){%>
                                        <p class="text-center mt-4 p-1 bg-success">Gasto editado satisfactoriamente
                                        </p>
                                        <%}%>
                        </div>
                    </form>
                </div>
            </div>
        </main>
        <%- include("template/footer.ejs")%>
            <script src="/js/edit_delete_wallet.js"></script>