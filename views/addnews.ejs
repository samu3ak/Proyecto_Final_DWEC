<%- include("template/head.ejs", {tituloWeb})%>
    <link rel="stylesheet" href="/css/register.css">
    </head>

    <body class="login">
        <main class="container-fluid mainlogin">

            <div class="container">
                <div class="row justify-content-center containerFormat">
                    <form action="/news/crearNoticia" class="rounded bg-dark p-4 text-white align-self-center"
                        method="post">
                        <div class="mt-2 text-center">
                            <h1 class="display-6">Nueva Noticia</h1>
                        </div>
                        <div class="mb-3 pt-4 ps-5 pe-5">
                            <label for="titulo" class="form-label">TÃ­tulo de la noticia</label>
                            <input type="text" class="form-control" id="titulo" placeholder="Titulo" name="titulo">
                        </div>
                        <div class="mb-3 pt-4 ps-5 pe-5">
                            <label for="descripcion" class="form-label">Descripcion</label>
                            <input type="text" class="form-control" id="descripcion"
                                placeholder="Descripcion de la noticia" name="descripcion">
                        </div>
                        <div class="row justify-content-center">
                            <div class="col-12 col-sm-12 col-md-9 col-lg-6 text-center">
                                <button type="submit"
                                    class="btn btn-success mt-5 buttonFormat text-center me-md-0 me-lg-5 me-xl-5">Publicar
                                    Noticia</button>
                            </div>
                            <div class="col-12 col-sm-12 col-md-9 col-lg-6 text-center">
                                <a class="btn btn-success mt-5 buttonFormat" href="/news">Volver</a>
                            </div>
                            <%if (error){%>
                                <p class="text-center mt-4 p-1 bg-danger">Rellena todos los campos correctamente</p>
                                <%}%>
                                    <%if (success){%>
                                        <p class="text-center mt-4 p-1 bg-success">Noticia publicada satisfactoriamente
                                        </p>
                                        <%}%>
                        </div>
                    </form>
                </div>
            </div>
        </main>
        <%- include("template/footer.ejs")%>